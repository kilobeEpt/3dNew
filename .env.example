# Application Environment
# For production, use: APP_ENV=production
APP_ENV=development
# For production, set to false to hide error details
APP_DEBUG=true
# Production URL with HTTPS
APP_URL=http://localhost

# Database Configuration
# For shared hosting: DB_HOST is usually "localhost"
# Database name format: username_dbname (e.g., ch167436_3dprint)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database
DB_USER=your_username
DB_PASS=your_password
DB_CHARSET=utf8mb4

# Mail Configuration
# Gmail SMTP example:
#   MAIL_HOST=smtp.gmail.com
#   MAIL_PORT=587
#   MAIL_ENCRYPTION=tls
#   Use App Password for Gmail (not regular password)
# SendGrid example:
#   MAIL_HOST=smtp.sendgrid.net
#   MAIL_PORT=587
#   MAIL_USERNAME=apikey
#   MAIL_PASSWORD=your-sendgrid-api-key
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="3D Print Platform"

# Security
# CRITICAL: Generate a strong random string for production!
# Use one of these methods:
#   openssl rand -base64 64
#   php -r "echo bin2hex(random_bytes(32));"
# Minimum 64 characters recommended
JWT_SECRET=your-secret-key-here
# API rate limit per IP (requests per minute)
API_RATE_LIMIT=100

# CAPTCHA Settings (recaptcha or hcaptcha)
# Get keys from:
#   reCAPTCHA: https://www.google.com/recaptcha/admin
#   hCaptcha: https://www.hcaptcha.com/
CAPTCHA_TYPE=recaptcha
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET=your-recaptcha-secret-key
HCAPTCHA_SITE_KEY=your-hcaptcha-site-key
HCAPTCHA_SECRET=your-hcaptcha-secret-key

# Admin Notifications
# Email address to receive system alerts and form submissions
ADMIN_EMAIL=admin@example.com

# Logging
# Options: debug, info, warning, error, critical
# For production, use: warning or error
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# CORS Settings
# For production, specify exact domains:
#   CORS_ALLOWED_ORIGINS=https://yourdomain.com
# For development, use: *
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# SEO Configuration
# Must be full HTTPS URL in production
SITE_URL=https://example.com
# Optional: CDN URL for static assets
CDN_URL=
