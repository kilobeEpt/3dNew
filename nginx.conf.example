# nginx Configuration Example for 3D Print Platform
# Place this in your nginx site configuration
# For shared hosting: This may not be needed if the router works correctly

server {
    listen 80;
    listen [::]:80;
    server_name 3dprint-omsk.ru www.3dprint-omsk.ru;

    # IMPORTANT: Web root is the project root (not public_html)
    root /home/c/ch167436/3dPrint;
    
    # Default index files
    index index.php index.html;

    # Charset
    charset utf-8;

    # Logging
    access_log /var/log/nginx/3dprint-access.log;
    error_log /var/log/nginx/3dprint-error.log;

    # Main location block - route through PHP router
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # API endpoints
    location /api/ {
        try_files $uri $uri/ /api/index.php?$query_string;
    }

    # Admin panel
    location /admin/ {
        try_files $uri $uri/ /admin/index.php?$query_string;
    }

    # PHP processing
    location ~ \.php$ {
        fastcgi_pass unix:/var/run/php/php8.2-fpm.sock;  # Adjust PHP version as needed
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        fastcgi_param PHP_VALUE "upload_max_filesize=10M \n post_max_size=10M";
    }

    # Deny access to sensitive files
    location ~ /\. {
        deny all;
    }

    location ~ ^/(composer\.(json|lock)|package(-lock)?\.json|\.env(\.example)?|bootstrap\.php)$ {
        deny all;
    }

    # Deny access to uploads directory (except images)
    location ~ ^/uploads/.*\.(php|php5|php7|phtml|pht)$ {
        deny all;
    }

    # Static files caching
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot|webp)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
}

