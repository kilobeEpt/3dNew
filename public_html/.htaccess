# Custom error pages
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# Prevent directory listing
Options -Indexes

# Serve sitemap.xml and robots.txt from API
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Sitemap
    RewriteRule ^sitemap\.xml$ /api/sitemap.xml [L,P]
    
    # Robots.txt
    RewriteRule ^robots\.txt$ /api/robots.txt [L,P]
</IfModule>

# Serve WebP images when available and supported
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Check if browser supports WebP
    RewriteCond %{HTTP_ACCEPT} image/webp
    
    # Check if WebP version exists
    RewriteCond %{REQUEST_FILENAME}.webp -f
    
    # Serve WebP instead
    RewriteRule ^(.+)\.(jpe?g|png)$ $1.$2.webp [T=image/webp,E=accept:1,L]
</IfModule>

<IfModule mod_headers.c>
    # Add Vary header for WebP
    <FilesMatch "\.(jpe?g|png)$">
        Header append Vary Accept
    </FilesMatch>
</IfModule>

# MIME types
<IfModule mod_mime.c>
    AddType image/webp .webp
    AddType application/javascript .js
    AddType text/css .css
    AddType application/json .json
    AddType image/svg+xml .svg
</IfModule>
