{
    "name": "project/api-admin-platform",
    "description": "PHP-based API and admin platform with shared hosting support",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "vlucas/phpdotenv": "^5.5",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
