{
    "name": "project/api-admin-platform",
    "description": "PHP-based API and admin platform with shared hosting support",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "vlucas/phpdotenv": "^5.6",
        "phpmailer/phpmailer": "^6.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "8.2.28"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
